<h1>Messages</h1>

<div>

</div>



<table class = "table">
    <tr>
        <th>Chat ID</th>
        <th>User ID</th>
        <th>Body</th>
        <th>Created At</th>
        <th>Updated At</th>
        <th>Show</th>
    </tr>

    <% @messages.each do |message| %>
    <tr>
        <td><%= message.chat_id %></td>
        <td><%= message.user_id  %></td>
        <td><%= message.body  %></td>
        <td><%= message.created_at  %></td>
        <td><%= message.updated_at  %></td>
        <td><%= link_to "Show", message_path(message) %></td>
    </tr>

    <% end %>
</table>

    
