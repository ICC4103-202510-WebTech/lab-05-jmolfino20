
<div class = "mt-3 container ms-4">
    <h1>Users</h1>
</div>

<div class = "container ms-4">
    <table class = "table table-bordered">
        <tr>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Sent Messages</th>
            <th>Show</th>
            <th>Edit</th>
        </tr>

        <% @users.each do |user| %>
        <tr>
            <td><%= user.email %></td>
            <td><%= user.first_name  %></td>
            <td><%= user.last_name  %></td>
            <td><%= user.messages.count %></td>
            <td><%= link_to "Show", user_path(user) %></td>
            <td><%= link_to "Edit", edit_user_path(user) %></td>
        </tr>

        <% end %>
    </table>

</div>    
<br>

<div class = "container ms-4">
    <%= link_to "Add new user", new_user_path, class: "mb-5 btn btn-primary" %>
</div>