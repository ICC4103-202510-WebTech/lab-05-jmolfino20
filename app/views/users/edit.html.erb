<div class = "mt-3 container ms-4">
    <h1>Edit User <%= @user.id %></h1>
</div>
    
    
<div class = "container ms-4">

    <%= form_with(model: @user, local: true) do |form| %>
    <% if @user.errors.any? %>
        <div class="alert alert-danger">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
        <ul>
            <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
        </ul>
        </div>
    <% end %>

    <div class="mb-3 col-4">
        <%= form.label :email, class: "form-label text-decoration-underline" %>
        <%= form.email_field :email, class: "form-control", required: true %>
    </div>

    <div class="mb-3 col-4">
        <%= form.label :first_name, class: "form-label text-decoration-underline" %>
        <%= form.text_field :first_name, class: "form-control", required: true %>
    </div>

    <div class="mb-3 col-4">
        <%= form.label :last_name, class: "form-label text-decoration-underline" %>
        <%= form.text_field :last_name, class: "form-control", required: true %>
    </div>


    <div class="actions">
        <%= form.submit "Update User", class: "btn btn-primary" %>
        <%= link_to "Back to User", user_path(@user), class: "btn btn-secondary" %>
        <%= link_to "Back to Users", users_path, class: "btn btn-secondary" %>
    </div>  

    <% end %>
</div>
