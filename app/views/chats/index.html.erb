
<div class = "mt-3 container ms-4">
    <h1>Chats</h1>
</div>

<div class = "container ms-4">

    <table class = "table table-bordered">
        <tr>
            <th>Sender ID</th>
            <th>Receiver ID</th>    
            <th>Show</th>
            <th>Edit</th>
        </tr>

        <% @chats.each do |chat| %>
        <tr>
            <td><%= chat.sender_id %></td>
            <td><%= chat.receiver_id  %></td>
            <td><%= link_to "Show", chat_path(chat) %></td>
            <td><%= link_to "Edit", edit_chat_path(chat) %></td>
        </tr>

        <% end %>
    </table>
</div>
<br>

<div class = "container ms-4">
    <%= link_to "Add new Chat", new_chat_path, class: "mb-5 btn btn-primary"%>
</div>
