<div class="mt-3 container ms-4">
  <h1>Edit Chat</h1>

  <div class="container ms-4">
    <%= form_with model: @chat, local: true do |form| %>

      <% if @chat.errors.any? %>
        <div class="alert alert-danger">
          <h2><%= pluralize(@chat.errors.count, "error") %> prohibited this chat from being saved:</h2>
          <ul>
            <% @chat.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

    <div class="mb-3 col-6">
        <%= form.label :sender_id, "Sender", class: "form-label text-decoration-underline" %>
        <%= form.select :sender_id, User.all.collect { |u| [u.email, u.id] }, {}, class: "form-control", required: true %>
    </div>

    <div class="mb-3 col-6">
        <%= form.label :receiver_id, "Receiver", class: "form-label text-decoration-underline" %>
        <%= form.select :receiver_id, User.all.collect { |u| [u.email, u.id] }, {}, class: "form-control", required: true %>
        
    </div>

      <div class="actions">
        <%= form.submit "Update Chat", class: "btn btn-primary" %>
        <%= link_to "Back to Chats", chats_path, class: "btn btn-secondary ms-2" %>
      </div>

    <% end %>
  </div>
</div>
